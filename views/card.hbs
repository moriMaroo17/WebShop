<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each courses}}
            <tr>
                <th>{{title}}</th>
                <th>{{count}}</th>
                <th>
                    <button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button>
                </th>
            </tr>
            {{/each}}

        </tbody>
    </table>

    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>